<resources>

    <!-- Base application theme. -->
    <style name="ATGTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_layout</item>
        <item name="android:textColor">@color/drawer_layout_text</item>
        <item name="android:windowContentOverlay">@drawable/border</item>
        <item name="android:windowActionBar">true</item>
    </style>


    <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/app_primary</item>
    </style>

</resources>
